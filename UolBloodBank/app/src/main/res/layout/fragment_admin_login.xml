<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dev2.uolbloodbank.AdminLoginFragment">


    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/ssusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/sspassword"
        android:ems="10"
        android:hint="Enter Username"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/ssusername"
        android:layout_marginTop="28dp"
        android:text="Password:" />

    <EditText
        android:id="@+id/sspassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginStart="29dp"
        android:layout_toEndOf="@+id/textView2"
        android:ems="10"
        android:hint="Enter Password!"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="31dp"
        android:text="Username:" />

    <Button
        android:id="@+id/ssbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/sspassword"
        android:layout_below="@+id/sspassword"
        android:layout_marginTop="23dp"
        android:elevation="0dp"
        android:text="Login" />
</RelativeLayout>
